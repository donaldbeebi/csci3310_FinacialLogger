<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.cuhk.csci3310_finaciallogger">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Csci3310_FinacialLogger">
        <activity android:name=".GameActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameTransactionActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_game_transaction">
        </activity>
        <activity android:name=".AddPresetActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".PieChartActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".LineChartActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".BarChartActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".GraphOptionsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".OverviewActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".RecordActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".InputActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".LoggingActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>