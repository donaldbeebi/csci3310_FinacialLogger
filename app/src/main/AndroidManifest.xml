<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.cuhk.csci3310_finaciallogger">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Csci3310_FinacialLogger">
        <activity android:name=".GameActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddPresetActivity"/>
        <activity android:name=".PieChartActivity" />
        <activity android:name=".LineChartActivity" />
        <activity android:name=".BarChartActivity" />
        <activity android:name=".GraphOptionsActivity" />
        <activity android:name=".OverviewActivity" />
        <activity android:name=".RecordActivity"/>
        <activity android:name=".InputActivity" />
        <activity android:name=".LoggingActivity" />
        <activity android:name=".MainActivity">

        </activity>
    </application>

</manifest>