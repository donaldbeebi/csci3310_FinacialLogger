<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoggingActivity">

    <EditText
        android:id="@+id/Manual_Input"
        android:layout_width="292dp"
        android:layout_height="51dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="156dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Please Input"
        android:textColor="#7D8388"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/PresetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="150dp"
        android:text="Click on the item to use preset options :"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/StartInputbutton"
        android:layout_width="409dp"
        android:layout_height="65dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="1dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:text="Next"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Manual_Input" />


    <FrameLayout
        android:id="@+id/PresetFragment"
        android:name="edu.cuhk.csci3310_finaciallogger.PresetFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/AddPreset"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PresetTitleAmountTextView"
        tools:layout="@layout/fragment_preset" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/AddPreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="48dp"
        android:onClick="startNewPreset"
        app:layout_constraintBottom_toTopOf="@+id/Manual_Input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PresetFragment"
        app:srcCompat="@android:drawable/ic_input_add"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="360dp" />

    <TextView
        android:id="@+id/ManualInputTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="293dp"
        android:layout_marginBottom="21dp"
        android:text="Manual Input"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/Manual_Input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PresetFragment" />

    <TextView
        android:id="@+id/PresetTitleItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="63dp"
        android:text="Item"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/PresetTitleAmountTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PresetText" />

    <TextView
        android:id="@+id/PresetTitleAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="16dp"
        android:text="Amount"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/PresetTitleItemTextView"
        app:layout_constraintTop_toBottomOf="@+id/PresetText" />

    <TextView
        android:id="@+id/PresetTitleCategoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="91dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="81dp"
        android:text="Category"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/PresetTitleAmountTextView"
        app:layout_constraintTop_toBottomOf="@+id/PresetText" />

</androidx.constraintlayout.widget.ConstraintLayout>