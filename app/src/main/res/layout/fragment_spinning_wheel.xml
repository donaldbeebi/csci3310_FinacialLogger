<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.SpinningWheelFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/bucks_text_view_spinning_wheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/eight_bit"
        android:textSize="24sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bucks_text_view_spinning_wheel"
        android:layout_alignBottom="@id/bucks_text_view_spinning_wheel"
        android:layout_toStartOf="@+id/bucks_text_view_spinning_wheel"
        android:src="@drawable/buy_wheels_icon_temp" />

    <ImageView
        android:id="@+id/spinning_wheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bucks_text_view_spinning_wheel"
        android:layout_marginTop="16dp"
        android:src="@drawable/spinning_wheel_test" />

    <Button
        android:id="@+id/spin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"
        android:text="@string/spin_button_text"
        android:fontFamily="@font/eight_bit"/>

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinning_wheel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Spin the wheel to get a new animal!"
        android:textSize="14sp"
        android:fontFamily="@font/eight_bit"
        android:visibility="visible" />

    <TextView
        android:id="@+id/buck_cost_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:fontFamily="@font/eight_bit"
        android:visibility="visible" />

</RelativeLayout>